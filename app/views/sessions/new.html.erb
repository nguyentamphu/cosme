<%= form_for(:account) do |f| %>
<div class="containers">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <div class="content" style="
        box-shadow: 3px 1px 33px;
        ">
        <div class="panel panel-primary" style="
          margin-top: 70px;margin-bottom: 150px;
          ">
          <div class="panel-heading text-default"><h1>Login</h1></div>
          <div class="panel-body">
            <%= f.label :email %><br>
            <%= f.text_field :email, class: "form-control", placeholder:"Enter your email" %><br>
            <%= f.label :password %><br>
            <%= f.password_field :password,class: "form-control", placeholder:"Enter your password" %><br>
            <div class="pull-right"><%= f.submit :Login, class:"btn btn-primary" %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
<% end %>