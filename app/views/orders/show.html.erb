<p id="notice"><%= notice %></p>
  <div class="row">
     <div class="panel panel-primary">
      <div class="panel-heading"> 
          <%= render partial:"accounts/header" %>
          </div>
          <div class="row clearfix f-space30"></div>
        <div class="panel-body">
        <table class="table table-hover">
          <tr><td>
              User:</td><td>
              <%= @order.account.full_name %></td>
          </tr> 

          <tr><td>
              Active status:</td><td>
              <%if @order.active_status==true %>
              <%= 'Actived'%>
              <% else%>
              <%= 'Don\'t Active'%>
              <%end%>
              </td>
          </tr>  
          <tr> <td>
              Pay status:</td><td>
              <%if @order.pay_status==true %>
              <%= 'Payed'%>
              <% else%>
              <%= 'Don\'t Pay'%>
              <%end%>
          </tr>  
          <tr> <td>
              Ship status:</td><td>
              <%if @order.ship_status==true %>
              <%= 'Shipped'%>
              <% else%>
              <%= 'Don\'t Ship'%>
              <%end%>
          </tr>  
          <tr> <td>
              Amount:</td><td>
            <%= @order.amount %></td>
          </tr>  
          <tr> <td>
              Ship at:</td><td>
              <%= @order.ship_at %>
          </tr>
          <tr> <td>
              Pay type:</td><td>
              <%= @order.pay_type %></td>
          </tr>
          <tr> <td>
              Telephonne:</td><td>
              <%= @order.account.tel %></td>
          </tr>
          <tr> <td>
              Address:</td><td>
              <%= @order.account.address %></td>
          </tr>


        </table>
        
    <br>
    <h4>Related Order Details </h4>
     <table class="table table-hover table-striped">
        <thead>
          <tr class="bg-primary">
            <th>ID</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Product</th>
          </tr>
        </thead>
        <tbody>
          <% @orders_details.each do |orders_detail| %>
            <tr>
              <td><%= orders_detail.id %></td>
              <td><%= number_to_currency(orders_detail.price) %></td>
              <td><%= orders_detail.quantity %></td>
              <td><%= orders_detail.product.name %></td>
            </tr>
          <% end %>
        </tbody>
       </table>
        <%= link_to '<i class="fa fa-long-arrow-left"></i>'.html_safe, orders_path, class: 'btn btn-primary', title:"Back" %>
        </div>
  </div>


