  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="topheadrow">
          <ul class="nav nav-pills pull-right">
            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" href="index.htm#a">ENG <i class="fa fa-angle-down fa-fw"></i> </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "ENG" %></li>
                <li><%= link_to "JPN" %></li>
                <li><%= link_to "VN" %></li>
              </ul>
            </li>
            <% if session[:id] %>
            <% if session[:cart] %>
            <li><%= link_to "<i class='fa fa-shopping-cart fa-fw'></i> <span class='hidden-sm'>My Cart (#{session[:cart].size()}) Items</span>".html_safe, new_cart_path, id: 'count_item_carts' %></li>
            <%end %>
            <li><%= link_to "<i class='fa fa-user fa-fw'></i> <span class='hidden-xs'>Hi! #{session[:name]}</span>".html_safe, account_path(session[:id]) %></li>  
            <li>
              <%= link_to "<i class='fa fa-sign-out fa-fw'></i> <span class='hidden-xs'>Sign Out</span>".html_safe, {:controller=> "sessions", :action=> "destroy", :id=> 1}, :method => :delete %></li> 
            <%else %>

            <li><%= link_to "<i class='fa fa-sign-in fa-fw'></i><span class='hidden-xs'>Sign up</span>".html_safe, new_account_path %></li>
            <li class="dropdown"> <a class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown" href="index.htm#a"> <i class="fa fa-user fa-fw"></i> <span class="hidden-xs"> Login</span></a>
              <div class="loginbox dropdown-menu"> <span class="form-header">Login</span>
                <%= form_tag login_path do %>
                  <div class="form-group"> <i class="fa fa-user fa-fw"></i>
                    <%= text_field_tag :email, params[:email], class: 'form-control', placeholder:'Email' %>
                  </div>
                  <div class="form-group"> <i class="fa fa-lock fa-fw"></i>
                    <%= password_field_tag :password, params[:password], class: 'form-control', placeholder:'Password' %>
                  </div>
                  <div>
                    <%= submit_tag 'Login', class: 'btn btn-success' %>
                  </div>
                <% end %>
              </div>
            </li>
            <%end %>
          </ul>
        </div>
      </div>
    </div>
  </div>