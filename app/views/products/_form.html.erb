<div class="row">
  <div class="col-lg-12">
    <%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-panel panel panel-primary  ">
      <div class="panel-heading">
        <h3 class="text-default"><strong>New product</strong></h3>
      </div>
      <div class="panel-body">
        <form role="form">
          <fieldset>
            <div class="row">
              <div class="col-lg-6 col-sm-6 col-md-6">
                <div class="row">
                  <%= f.label :name, class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.text_field :name, class: "col-lg-8" %>
                </div>
                <div class="row">
                  <%= f.label :serial, class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.text_field :serial, class: "col-lg-8" %>
                </div>
                <div class="row">
                  <%= f.label :height, class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.text_field :height, class: "col-lg-8" %>
                </div>
                <div class="row">
                  <%= f.label :brand_id, class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.collection_select :brand_id, @brand,:id, :name, class: "col-lg-8",:prompt => "---Select Brand ---" %>
                </div>
                <div class="row">
                  <%= f.label :category_id, class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.collection_select :category_id, @category,:id, :name, class: "col-lg-8", :prompt => "---Select Category ---" %>
                </div>
              </div>
              <div class="col-lg-6 col-sm-6 col-md-6">
                <div class="row">
                  <%= f.label :price, class: "col-lg-2 col-lg-offset-1"%>
                  <%= f.number_field :price, class: "col-lg-8" %>
                </div>
                <div class="row">
                  <%= f.label 'Sale', class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.number_field :sale_off, class: "col-lg-8" %>
                </div>
                <div class="row">
                  <%= f.label :quantity, class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.number_field :quantity, class: "col-lg-8" %>
                </div>
                <div class="row">
                  <%= f.label :discount, class: "col-lg-2 col-lg-offset-1" %>
                  <%= f.number_field :discount, class: "col-lg-8" %>
                </div>
              </div>
            </div>
            <div class="row">
              <%= f.label :detail, class: "col-lg-offset-1" %><br>
              <%= f.cktext_area :detail, row: 12, column: 15, class: "col-lg-offset-1" %>
            </div>
            <br/>
            <div class="actions">
              <%= f.button :submit, class: 'btn btn-primary' %>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
    <% end %>
  </div>
</div>
 <script type="text/javascript">
  $(document).ready(function(){
      $("#product_brand_id").select2();
      $("#product_category_id").select2();
  });
</script>